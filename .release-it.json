{
  "git": {
    "tagName": "${version}",
    "commitMessage": ":bookmark: chore(release): v${version}",
    "pushArgs": [
      "--follow-tags",
      "--force"
    ],
    "requireUpstream": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "scripts": {},
  "plugins": {
    "@release-it/bumper": {
      "out": [
        "./package-lock.json"
      ]
    }
  },
  "hooks": {
    "after:bump": "npm run changelog && git add ."
  }
}